<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springbootdemo.dao.StudentMapper">
    <resultMap id="BaseResultMap" type="com.example.springbootdemo.entity.Student">
        <id column="sno" jdbcType="INTEGER" property="sno"/>
        <result column="sname" jdbcType="VARCHAR" property="sname"/>
        <result column="ssex" jdbcType="VARCHAR" property="ssex"/>
        <result column="sbirthday" jdbcType="DATE" property="sbirthday"/>
        <result column="clazz" jdbcType="VARCHAR" property="clazz"/>
    </resultMap>
    <insert id="insertStudent">
        insert into student (sno, sname, ssex, sbirthday, clazz)
        values (#{sno}, #{sname}, #{ssex}, #{sbirthday}, #{clazz})
    </insert>
    <select id="getStuByName" resultType="com.example.springbootdemo.entity.Student">
        select *
        from student
        where sname = #{sname}
    </select>
    <select id="selectStu" resultType="com.example.springbootdemo.entity.Student">
        select *
        from student
        <where>
            <if test="arg0 != null">
                sno = #{arg0}
            </if>
            <if test="arg1 != null">
                and sname = #{arg1}
            </if>
            <if test="arg2 != null">
                and ssex = #{arg2}
            </if>
        </where>
    </select>
    <select id="getStuById" resultType="com.example.springbootdemo.entity.Student">
        select *
        from student
        where sno = #{sno}
    </select>
    <select id="selectStudent" resultType="com.example.springbootdemo.entity.Student">

    </select>
</mapper>